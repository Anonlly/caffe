{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "esnext"
    ],
    "declaration": false,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts"
  ]
}